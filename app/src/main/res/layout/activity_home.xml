<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAct">

<!--    Background-->
    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primary"
        />

<!--Nama dan Bio-->
    <LinearLayout
            android:id="@+id/name_and_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Cristiano"
                android:fontFamily="@font/mbold"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mahasiswa"
                android:fontFamily="@font/msemibold"
                android:textSize="14sp"
                android:textColor="@color/white"
                />
        </LinearLayout>

<!--        profile pict-->
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_picture_circle"
        android:src="@drawable/ava_cristiano"
        android:layout_gravity="center_vertical"
        />

<!--    Scroll-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="100dp"
                >
                <!--            Rincian Task-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/mbold"
                    android:text="Rincian Task"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!--            Card ToDo dan Doing-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="2dp"
                    android:weightSum="2"
                    >
                    <!--                CARD TODO-->
                    <LinearLayout
                        android:id="@+id/card_todo"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:orientation="vertical"
                        android:background="@drawable/ilus_todo"
                        android:layout_weight="1"
                        >
                        <!--                    todo-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="To Do"
                            android:textSize="14sp"
                            android:fontFamily="@font/msemibold"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="12 Task tersedia"
                            android:textSize="12sp"
                            android:fontFamily="@font/mregular"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <!--                CARD DOING-->
                    <LinearLayout
                        android:id="@+id/doing"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:background="@drawable/ilus_doing"
                        android:layout_weight="1"
                        >
                        <!--                    doing-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="Doing"
                            android:textSize="14sp"
                            android:fontFamily="@font/msemibold"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="12 Task tersedia"
                            android:textSize="12sp"
                            android:fontFamily="@font/mregular"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!--            Card Done dan Missing-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="2dp"
                    android:weightSum="2"
                    >
                    <!--                CARD Done-->
                    <LinearLayout
                        android:id="@+id/done"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:orientation="vertical"
                        android:background="@drawable/ilus_done"
                        android:layout_weight="1"
                        >
                        <!--                    done-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="Done"
                            android:textSize="14sp"
                            android:fontFamily="@font/msemibold"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="12 Task tersedia"
                            android:textSize="12sp"
                            android:fontFamily="@font/mregular"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <!--                Card Missing-->
                    <LinearLayout
                        android:id="@+id/missing"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:orientation="vertical"
                        android:background="@drawable/ilus_missing"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        >
                        <!--                    missing-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="Missing"
                            android:textSize="14sp"
                            android:fontFamily="@font/msemibold"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="12 Task tersedia"
                            android:textSize="12sp"
                            android:fontFamily="@font/mregular"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!--            Task Deadline-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mbold"
                    android:text="Task Deadline"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <!--            Card List 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="@drawable/bg_card_missing"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    >
                    <!--                Deadline-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        >
                        <ImageView
                            android:id="@+id/ic_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time"
                            />
                        <TextView
                            android:id="@+id/deadline_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="7 Agustus 2021"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:fontFamily="@font/msemibold"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>

                    <!--                Title Task-->
                    <TextView
                        android:id="@+id/task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="24dp"
                        android:text="Memberi makan Anjing"
                        android:textSize="14sp"
                        android:fontFamily="@font/msemibold"
                        android:layout_gravity="center_vertical"
                        />
                    <!--                Desc Task-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem"
                        android:textSize="12sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/mregular"
                        android:layout_gravity="center_vertical"
                        />
                    <!--                Lihat Selengkapnya-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:text="Lihat Selengkapnya"
                        android:textSize="12sp"
                        android:lineHeight="18dp"
                        android:fontFamily="@font/msemibold"
                        android:textColor="@color/primary"
                        />
                </LinearLayout>

                <!--            Card List 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="@drawable/bg_card_doing"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    >
                    <!--                Deadline-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        >
                        <ImageView
                            android:id="@id/ic_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time"
                            />
                        <TextView
                            android:id="@id/deadline_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="7 Agustus 2021"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:fontFamily="@font/msemibold"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>

                    <!--                Title Task-->
                    <TextView
                        android:id="@id/task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="24dp"
                        android:text="Memberi makan Anjing"
                        android:textSize="14sp"
                        android:fontFamily="@font/msemibold"
                        android:layout_gravity="center_vertical"
                        />
                    <!--                Desc Task-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem"
                        android:textSize="12sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/mregular"
                        android:layout_gravity="center_vertical"
                        />
                    <!--                Lihat Selengkapnya-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:text="Lihat Selengkapnya"
                        android:textSize="12sp"
                        android:lineHeight="18dp"
                        android:fontFamily="@font/msemibold"
                        android:textColor="@color/primary"
                        />
                </LinearLayout>

                <!--            Card List 3-->
                <LinearLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="@drawable/bg_card_todo"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    >
                    <!--                Deadline-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        >
                        <ImageView
                            android:id="@id/ic_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time"
                            />
                        <TextView
                            android:id="@id/deadline_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="7 Agustus 2021"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:fontFamily="@font/msemibold"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>

                    <!--                Title Task-->
                    <TextView
                        android:id="@id/task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="24dp"
                        android:text="Memberi makan Anjing"
                        android:textSize="14sp"
                        android:fontFamily="@font/msemibold"
                        android:layout_gravity="center_vertical"
                        />
                    <!--                Desc Task-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem"
                        android:textSize="12sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/mregular"
                        android:layout_gravity="center_vertical"
                        />
                    <!--                Lihat Selengkapnya-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:text="Lihat Selengkapnya"
                        android:textSize="12sp"
                        android:lineHeight="18dp"
                        android:fontFamily="@font/msemibold"
                        android:textColor="@color/primary"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>